@model IEnumerable<Database.Models.Estabelecimento>

@{
    ViewBag.Title = "Index";
}

<h2>Estabelecimentos</h2>

<div class="row">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var estabelecimento = Model.ElementAt(i);

        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="thumbnail">
                <img src="" alt="">
                @Html.Image(estabelecimento.Foto)
                <div class="caption">
                    <h3>@estabelecimento.Nome</h3>
                    <p>@estabelecimento.Descricao</p>
                    <p>
                        @Html.ActionLink("Abrir", "Detalhe", new { id = estabelecimento.IdEstabelecimento }, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
        </div>

        if (i > 1)
        {
            if (((i + 1) % 3) == 0)
            {
                <div class="clearfix visible-lg-block"></div>
            }
            if (((i + 1) % 2) == 0)
            {
                <div class="clearfix visible-md-block"></div>
            }
            <div class="clearfix visible-sm-block"></div>
        }
    }
</div>