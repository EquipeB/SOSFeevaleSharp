@using Database.Models;
@model Estabelecimento

@{
    ViewBag.Title = "Detalhe";
    IEnumerable<Produto> produtos = ViewBag.Produtos;
}

<h2>Detalhe</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4>@Model.Nome</h4>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-12 col-md-6 col-lg-8">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Localizacao)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Localizacao)
                    </dd>
                </dl>
            </div>
            <div class="col-sm-12 col-md-6 col-lg-4">
                @Html.Image(Model.Foto)
            </div>
        </div>
    </div>
</div>

@if (produtos != null && produtos.Count() > 0)
{
    <h2>Produtos</h2>

    <div class="row">
        @for (int i = 0; i < produtos.Count(); i++)
        {
            var produto = produtos.ElementAt(i);

            <div class="col-sm-12 col-md-6 col-lg-4">
                <div class="thumbnail">
                    @Html.Image(produto.Foto)
                    <div class="caption">
                        <h3>@produto.Nome</h3>
                        <p>@produto.Descricao</p>
                        <p>@string.Format("{0:C}", produto.Preco)</p>
                        <p>
                            @Html.ActionLink("Abrir", "Detalhe", new { id = produto.IdProduto }, new { @class = "btn btn-primary" })
                        </p>
                    </div>
                </div>
            </div>

            if (i > 1)
            {
                if (((i + 1) % 3) == 0)
                {
                    <div class="clearfix visible-lg-block"></div>
                }
                if (((i + 1) % 2) == 0)
                {
                    <div class="clearfix visible-md-block"></div>
                }
                <div class="clearfix visible-sm-block"></div>
            }
        }
    </div>
}