@model Database.Models.TipoProduto

@{
    ViewBag.Title = "Detalhe";
    IEnumerable<Database.Models.Produto> produtos = ViewBag.Produtos;
}


<h2>@Model.Descricao</h2>

<div class="row">
    @for (int i = 0; i < produtos.Count(); i++)
    {
        var produto = produtos.ElementAt(i);

        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="thumbnail">
                @Html.Image(produto.Foto)
                <div class="caption">
                    <h3>@produto.Nome</h3>
                    <p>@produto.Descricao</p>
                    <p>@string.Format("{0:C}", produto.Preco)</p>
                    <p>
                        @Html.ActionLink("Abrir", "Detalhe", "Produto", new { id = produto.IdProduto }, new { @class = "btn btn-primary" })
                    </p>
                </div>
            </div>
        </div>

        if (i > 1)
        {
            if (((i + 1) % 3) == 0)
            {
                <div class="clearfix visible-lg-block"></div>
            }
            if (((i + 1) % 2) == 0)
            {
                <div class="clearfix visible-md-block"></div>
            }
            <div class="clearfix visible-sm-block"></div>
        }
    }
</div>