@model Web.Models.Account.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="container login">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text">
            <h1><strong>Página de Login</strong></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 form-box">
            <div class="form-top">
                <div class="form-top-left">
                    <h3>Login pela página SOS FEEVALE</h3>
                    <p>Insira seu usuário e senha:</p>
                </div>
                <div class="form-top-right">
                    <i class="fa fa-key"></i>
                </div>
            </div>
            <div class="form-bottom">
                @*<form role="form" action="" method="post" class="login-form">
                    <div class="form-group">
                        <label class="sr-only" for="form-username">Username</label>
                        <input type="text" name="form-username" placeholder="Email" class="form-username form-control" id="form-username">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="form-password">Password</label>
                        <input type="password" name="form-password" placeholder="Senha" class="form-password form-control" id="form-password">
                        <div style="float:right; font-size: 80%; position: relative; top:7px"><a href="#">Esqueceu a senha?</a></div>
                    </div>
                    <button type="submit" class="btn">Login!</button>

                </form>*@
                @using (Html.BeginForm("Login", "Account", FormMethod.Post,new { @class = "login-form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @*@Html.LabelFor(model => model.UserName)*@
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Usuário" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                    <div class="form-group">
                        @*@Html.LabelFor(model => model.Password)*@
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = Html.DisplayNameFor(n => n.Password) })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                    @Html.ValidationSummary("", new { @class = "text-danger" })

                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Logar" />
                    </div>
                }
            </div>
            <div class="form-group">
                <div class="col-md-12 control">
                    <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                        Não tem uma conta!
                        @Html.ActionLink("Crie uma agora", "Registrar").
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 social-login">
            <h3>Logue pelas redes sociais:</h3>
            <div class="social-login-buttons">
                <a class="btn btn-link btn-link-facebook" href="#">
                    <i class="fa fa-facebook"></i> Facebook
                </a>
                <a class="btn btn-link btn-link-twitter" href="#">
                    <i class="fa fa-twitter"></i> Twitter
                </a>
                <a class="btn btn-link btn-link-google" href="#">
                    <i class="fa fa-google-plus"></i> Google Plus
                </a>
            </div>
        </div>
    </div>
</div>